{{#if addDishProfile}}
    <div class="dish">
            <div class="dish__text">
                <div class="font_h2">
                    Хотите добавить блюдо?
                </div>
            </div>
            <img class="dish__add-icon" src="http://forum.swiftbook.ru/uploads/default/original/2X/5/51892c94f65050dff0f41b49a990cdfcc29ee1e4.png">
    </div>
{{else}}
    <div href="dish/{{id}}" id="{{id}}" class="dish">
        <div class="dish__text">
            <div class="font_h2">
                {{name}}
            </div>

            <div class="font-paragraph">
                {{cost}} ₽ • {{ccal}} ккал
            </div>
        </div>
        <img class="dish__img" src="{{img}}">
    </div>
{{/if}}